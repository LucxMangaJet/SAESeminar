<Window x:Class="WPFPractices.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFPractices"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        >

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Hello"></MenuItem>
        </Menu>
        <ItemsControl x:Name="todoItemsControl" ItemsSource="{Binding Todos}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <UniformGrid Columns="2" Margin="0,0,10,10">
                        <TextBlock Text="{Binding Title}" />
                        <ProgressBar Grid.Column="1" Minimum="0" Maximum="1" Value="{Binding Completion}" />
                    </UniformGrid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
    </DockPanel>
</Window>
