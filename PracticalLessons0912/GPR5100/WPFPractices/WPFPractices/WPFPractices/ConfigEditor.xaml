<Window x:Class="WPFPractices.ConfigEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFPractices"
        mc:Ignorable="d"
        Title="ConfigEditor" Height="450" Width="412.475">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="374*"/>
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>
        <UniformGrid Grid.RowSpan="2">
            <UniformGrid Columns=" 2">
                <TextBlock Text="Position X" ></TextBlock>
                <TextBox  Text="Hello" x:Name="PositionTextBox"></TextBox>
            </UniformGrid>

        </UniformGrid>
        <Button Grid.Row="1" Content="Apply" Click="ApplyConfig"></Button>
    </Grid>
</Window>
